doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")
    link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css")
    link(rel="stylesheet" href="index.css")
    title Document
  body
    div
      .grey.darken-1.empty-layout
        form.card.auth-card
          .card-content
            span.card-title Домашняя бухгалтерия
            .input-field
              input#email(type="text")
              label(for="email") Email
              small.helper-text.invalid Email
            .input-field
              input#password.validate(type="password")
              label(for="password") Пароль
              small.helper-text.invalid Password
            .input-field
              input#name.validate(type="text")
              label(for="name") Имя
              small.helper-text.invalid Name
            p
              label
                input(type="checkbox")
                span С правилами согласен
          .card-action
            div
              button.btn.waves-effect.waves-light.auth-submit(type="submit")
                | Зарегистрироваться
                i.material-icons.right send
            p.center
              | Уже есть аккаунт?
              a(href="/") Войти!
    script(src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js")
